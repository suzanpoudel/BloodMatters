<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/Register.css" />
    <link
      rel="icon"
      href="/public/Images/BloodMattresLogo.png"
      type="image/png"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
  </head>
  <title>Start Saving Lives</title>

  <style>
    .padl {
      padding-right: 10px;
    }

    .photo{
      margin: auto;
      width: 35%;
      height: 50%;

    }
  </style>

  <body>
     <%- include('./partials/index_nav.ejs'); %>

    <div class="inner">
      <div class="photo">
        <img src="/public/Images/contact.jpg" />
      </div>
      <div class="user-form">
        <h1>Contact Us</h1>
        <%- include('./partials/messages.ejs'); %>
        <form action="/submitcontact" method="post">
          <i class="fas fa-user icon"></i>
          <input
            type="text"
            name="name"
            placeholder="Name"
            required
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />

          <i class="fas fa-envelope-square"></i>
          <input
            type="email"
            name="email"
            placeholder="E-mail"
            required
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
          <br />

          <i class="fa-solid fa-location-dot"></i>
          <input
            type="text"
            name="address"
            placeholder="Address"
            value="<%= typeof address != 'undefined' ? address : '' %>"
          />
          <i class="fa-solid fa-phone"></i>
          <input
          type="number"
          name="phonenumber"
          placeholder="Phonenumber"
          value="<%= typeof phonenumber != 'undefined' ? phonenumber : '' %>"
        />
        <i class="fa-solid fa-paper-plane"></i>
          <textarea
          class="px-4 pt-3"
          id="msg_input"
            type="text"
            name="msg"
            placeholder=" Message"
            value="<%= typeof msg != 'undefined' ? msg : '' %>"
          ></textarea>
    
          <div class="action-button">
            <button type="submit" class="button primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
    <script src="/public/Register.js"></script>
  </body>
</html>
