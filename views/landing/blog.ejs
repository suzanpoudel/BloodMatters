<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href='/public/Images/BloodMattresLogo.png' type="image/png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
    crossorigin="anonymous"
    />

    
</head>
<title>Start Saving Lives </title>

<body>
    <%- include('.././partials/index_nav_new.ejs'); %>
    <div class="boxed_wrapper ltr">
            <!-- <hr class="col-2 border border-danger-custom border-3"/> -->
          </div>
        <%- include('.././partials/messages.ejs'); %> <% posts.forEach(Post => { %>
        <div class="row">
          <div class="col-md-6 offset-md-3">
            <div class="card">
              <div class="card-body">
                <div class="card-footer bg-danger-custom text-light">
                  <h5 class="card-title"><%= Post.title%></h5>
                </div>
                <h6 class="px-2 py-4 fw-normal"><%= Post.body%></h6>
              <img src="<%=Post.imageUrl%>" class="card-img-top border" alt="post image">
                <div class="card-footer">
                  <p class="card-text my-3">
                    <small class="text-muted"
                      >Posted by:
                      <b class="text-success"><%=Post.creator.name%>, </b></small
                    >
                    <small class="text-muted">
                      <b class="text-success"><%= moment(Post.updatedAt).format('LLLL')%></b></small
                    >
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <br>
        <% }) %>
    </div>
</body>

</html>