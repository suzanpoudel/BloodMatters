<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/Register.css" />
    <link
      rel="icon"
      href="/public/Images/BloodMattresLogo.png"
      type="image/png"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
  </head>
  <title>Start Saving Lives</title>

  <style>
    .padl {
      padding-right: 10px;
    }
  </style>

  <body>
    <%- include('./partials/index_nav.ejs'); %>


    <div class="inner">
      <div class="photo">
        <img src="/public/Images/registerINAGE.jpg" />
      </div>
      <div class="user-form">
        <h1>Start Saving Lives</h1>
        <%- include('./partials/messages.ejs'); %>
        <form action="/users/register" method="post">
          <i class="fas fa-user icon"></i>
          <input
            type="text"
            name="name"
            placeholder="Name"
            required
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />

          <i class="fas fa-envelope-square"></i>
          <input
            type="email"
            name="email"
            placeholder="E-mail"
            required
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
          <br />
          <div class="input-group">
            <div class="col-md-6 padl">
              <i class="fas fa-lock"></i>
              <input
                type="password"
                placeholder="Password"
                name="password"
                id="password2"
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
              />
            </div>
            <div class="col-md-6">
              <i class="fas fa-lock"></i>
              <input
                type="password"
                placeholder="Confirm Password"
                name="password2"
                id="password_data"
                value="<%= typeof password != 'undefined' ? password : '' %>"
              />
            </div>
          </div>
          <div class="input-group">
            <div class="col-md-6 padl">
              <input
                type="text"
                name="dob"
                placeholder="Date of Birth"
                onfocus="(this.type = 'date')"
                value="<%= typeof dob != 'undefined' ? dob : '' %>"
              />
            </div>
            <div class="col-md-6">
              <select name="gender" id="gender">
                <option value="" disabled selected>Select gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Others">Others</option>
              </select>
            </div>
            <br />
          </div>

          <div class="input-group">
            <div class="col-md-6 padl">
              <select name="bloodgroup" id="bloodgroup">
                <option value="" disabled selected>Select Blood Group</option>
                <option value="A+">A+</option>
                <option value="O+">O+</option>
                <option value="B+">B+</option>
                <option value="AB+">AB+</option>
                <option value="A-">A-</option>
                <option value="O-">O-</option>
                <option value="B-">B-</option>
                <option value="AB-">AB-</option>
              </select>
            </div>
            <div class="col-md-6">
              <input
                type="number"
                name="phonenumber"
                placeholder="Phonenumber"
                value="<%= typeof phonenumber != 'undefined' ? phonenumber : '' %>"
              />
            </div>
          </div>
          <input
            type="text"
            name="address"
            placeholder="Address"
            value="<%= typeof address != 'undefined' ? address : '' %>"
          />

          <div class="action-button">
            <button type="submit" class="button primary">Create Account</button>
          </div>
          <div class="d-flex justify-content-center">
            <p class="text-light">Already registered?</p><a href="/users/login" style="text-decoration: none;"><h5 class="ms-2 text-warning">Login</h5></a>
        </div>
        </form>
      </div>
    </div>
    <script src="/public/Register.js"></script>
  </body>
</html>
