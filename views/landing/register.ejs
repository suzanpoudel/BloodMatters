<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href='/public/Images/BloodMattresLogo.png' type="image/png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
    crossorigin="anonymous"
    />

    
</head>
<title>Start Saving Lives </title>

<body>
    <%- include('.././partials/index_nav_new.ejs'); %>
    
    <section class="contact-section pt_80 pb_150 mt-5">
        <div class="auto-container">
            <div class="row clearfix">
                <div class="col-lg-4 col-md-12 col-sm-12 content-column">
                    <div class="content-box mr_70">
                        <div class="sec-title mb_45">
                            <span class="sub-title">User Registration</span>
                            <!-- <h2>Join <span style="color: #a82020;">BloodMatters</span> Community</h2> -->
                            <h2>Blood Bonds Start Here</h2>
                            <p>Connecting Donors and Recipients</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 form-column">
                    <div class="form-inner">
                      <%- include('.././partials/messages.ejs'); %>
                      <form action="/users/register" method="post" id="contact-form" class="default-form">
                        <div class="col-lg-12 col-md-6 col-sm-12 form-group">
                        <input
                          type="text"
                          name="name"
                          placeholder="Name"
                          required
                          value="<%= typeof name != 'undefined' ? name : '' %>"
                        />
                          </div>
                          <div class="col-lg-12 col-md-6 col-sm-12 form-group">
                        <input
                          type="email"
                          name="email"
                          placeholder="E-mail"
                          required
                          value="<%= typeof email != 'undefined' ? email : '' %>"
                        />
                          </div>
                        <div class="input-group">
                          <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                            <input
                              type="password"
                              placeholder="Password"
                              name="password"
                              id="password2"
                              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                            />
                          </div>
                          <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                            <input
                              type="password"
                              placeholder="Confirm Password"
                              name="password2"
                              id="password_data"
                              value="<%= typeof password != 'undefined' ? password : '' %>"
                            />
                          </div>
                        </div>
                        <div class="input-group">
                          <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                            <input
                              type="date"
                              name="dob"
                              placeholder="Date of Birth"
                              value="<%= typeof dob != 'undefined' ? dob : '' %>"
                            />
                          </div>
                          <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                            <select name="gender" id="gender" class="form-select">
                              <option value="" disabled selected>Select gender</option>
                              <option value="Male">Male</option>
                              <option value="Female">Female</option>
                              <option value="Others">Others</option>
                            </select>
                          </div>
                          <br />
                        </div>
              
                        <div class="input-group">
                          <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                            <select name="bloodgroup" id="bloodgroup">
                              <option value="" disabled selected>Select Blood Group</option>
                              <option value="A+">A+</option>
                              <option value="O+">O+</option>
                              <option value="B+">B+</option>
                              <option value="AB+">AB+</option>
                              <option value="A-">A-</option>
                              <option value="O-">O-</option>
                              <option value="B-">B-</option>
                              <option value="AB-">AB-</option>
                            </select>
                          </div>
                          <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                            <input
                              type="number"
                              name="phonenumber"
                              placeholder="Phonenumber"
                              value="<%= typeof phonenumber != 'undefined' ? phonenumber : '' %>"
                            />
                          </div>
                        </div>
                        <div class="col-lg-12 col-md-6 col-sm-12 form-group">
                          <input
                            type="text"
                            name="address"
                            placeholder="Address"
                            value="<%= typeof address != 'undefined' ? address : '' %>"
                          />
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-center">
                          <p class="text-dark">Already registered?</p><a href="/users/login" style="text-decoration: none;"><h5 class="ms-2 text-warning">Login</h5></a>
                      </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 form-group message-btn">
                          <button class="theme-btn btn-one shadow" type="submit" name="submit-form"><span>Register</span></button>
                      </div>
                      </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
</body>

</html>