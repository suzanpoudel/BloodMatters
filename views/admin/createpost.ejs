<main>
  <div class="px-4 py-5 my-5 text-center">
    <form action="/admin/create/post" method="POST" enctype="multipart/form-data" >
        <%- include('.././partials/messages.ejs'); %>
        <div class="col-10 m-auto">
            <div class="card border-1 border-dark">
              <div class="card-body">
                <div class="form-group ">
                    <label class="form-label p-1"><h6>Create Post</h6></label>
                    <input type="text" placeholder="Enter Title" name="title" class="form-control m-2"></input>
                    <input type="text" placeholder="Enter Description" name="body" class="form-control m-2"></input>
                    <input type="file" name="image" id="image" class="form-control m-2" />
                </div>
                <button type="submit" class="btn btn-success m-2 col-5">Create</button>
              </div>
            </div>
        </div>
    </form>
