<main>
  <div class="px-4 py-5 my-5 text-center">
    <form action="/admin/bb-form" method="POST">
        <%- include('.././partials/messages.ejs'); %>
        <div class="col-10 m-auto">
            <div class="card border-1 border-dark">
              <div class="card-body">
                <div class="form-group ">
                    <label class="form-label p-1"><h6>Upload Blood Bank Info</h6></label>
                    <input type="text" placeholder="Enter Blood bank Name" name="name" class="form-control m-2"></input>
                    <input type="text" placeholder="Enter Address" name="address" class="form-control m-2"></input>
                    <input type="text" placeholder="Enter Contact" name="contact" class="form-control m-2"></input>
                    <div class="input-group">
                        <label class="form-label m-auto">Total O+ :</label>
                        <input type="number" name="o_pos"  min="0" class="form-control m-2"></input> 
                        <label class="form-label m-auto">Total O- :</label>
                        <input type="number" name="o_neg" min="0" class="form-control m-2"></input>
                    </div>
                    <div class="input-group">
                        <label class="form-label m-auto">Total A+ :</label>
                        <input type="number" name="a_pos" min="0" class="form-control m-2"></input> 
                        <label class="form-label m-auto">Total A- :</label>
                        <input type="number" name="a_neg" min="0" class="form-control m-2"></input>
                    </div>
                    <div class="input-group">
                        <label class="form-label m-auto">Total B+ :</label>
                        <input type="number" name="b_pos" min="0" class="form-control m-2"></input> 
                        <label class="form-label m-auto">Total B- :</label>
                        <input type="number" name="b_neg" min="0" class="form-control m-2"></input>
                    </div>
                    <div class="input-group">
                        <label class="form-label m-auto">Total AB+ :</label>
                        <input type="number" name="ab_pos" min="0" class="form-control m-2"></input> 
                        <label class="form-label m-auto">Total AB- :</label>
                        <input type="number" name="ab_neg" min="0" class="form-control m-2"></input>
                    </div>
                </div>
                <button type="submit" class="btn btn-success m-2 col-5">Upload</button>
              </div>
            </div>
        </div>
    </form>
    </div>
  </div>
</main>
