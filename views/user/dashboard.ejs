<!--Main layout-->

<main>
  <div class="px-4 py-5 my-5">
    <div class="text-danger-custom stick-at-top">
      <h3 class="fw-bold">Dashboard</h3>
      <!-- <hr class="col-2 border border-danger-custom border-3"/> -->
    </div>
  <%- include('.././partials/messages.ejs'); %> <% posts.forEach(Post => { %>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card border-brand">
        <div class="card-body">
          <div class="card-footer bg-danger-custom text-light">
            <h5 class="card-title"><%= Post.title%></h5>
          </div>
          <h6 class="px-2 py-4 fw-normal"><%= Post.body%></h6>
        <img src="<%=Post.imageUrl%>" class="card-img-top border" alt="post image">
          <div class="card-footer">
            <p class="card-text my-3">
              <small class="text-muted"
                >Posted by:
                <b class="text-success"><%=Post.creator.name%>, </b></small
              >
              <small class="text-muted">
                <b class="text-success"><%= moment(Post.updatedAt).format('LLLL')%></b></small
              >
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
  <% }) %>
</main>
