<!--Main layout-->

<main>
  <div class="px-4 py-5 my-5">
    <div class="text-center">
      <h1 class="display-5 fw-bold">Welcome to BloodMatters Dashboard</h1>
      <hr />
    </div>
    <%- include('.././partials/messages.ejs'); %> <% posts.forEach(Post => { %>
    <div
      class="card col-6 mx-auto my-5 border-1 border-dark bg-dark bg-opacity-10"
    >
      <div class="card-body">
        <p class="card-text">
          <small class="text-muted"
            ><%= moment(Post.updatedAt).format('LLLL')%></small
          >
        </p>
        <h5 class="card-title"><%= Post.title%></h5>
        <p class="card-text"><%= Post.body%></p>
      </div>
      <% if (Post.imageUrl) { %>
      <img class="card-img-top" src="<%=Post.imageUrl%>" alt="Card image cap" />
      <% } %>
      <div class="card-footer">
        <p class="card-text my-3">
          <small class="text-muted"
            >Posted by:
            <b class="text-success"><%=Post.creator.name%></b></small
          >
        </p>
      </div>
    </div>
    <hr />
    <% }) %>
  </div>
</main>
