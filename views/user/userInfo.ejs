<%- include('.././partials/navbar.ejs'); %>
<%- include('.././partials/sidemenu.ejs'); %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

<main>
    <section>
      <div class="px-4 py-5 my-5">
        <div class="text-danger-custom">
          <h3 class="fw-bold"><%=profile.name%></h3>
          <hr />
        </div>
          <div class="row p-5">
            <div class="col-lg-4">
              <div class="card mb-4">
                <div class="card-body text-center">
                  <img src="/public/Images/user.png" alt="avatar"
                    class="rounded-circle img-fluid" style="width: 150px;">
                  <h5 class="my-3"><%=profile.name%></h5>
                  <% if (profile.status === 'Idle') { %>
                    <button type="button" class="btn btn-secondary m-2"><%=profile.status%></button>
                <% } else if (profile.status === 'Doner') { %>
                  <button type="button" class="btn btn-warning m-2"><%=profile.status%></button>
                  <% } else { %>
                    <button type="button" class="btn btn-danger-custom m-2"><%=profile.status%></button>
                <% } %>
                  <p class="text-muted mb-1"><%=profile.email%></p>
                  <p class="text-muted mb-4"><%=profile.address%></p>
                  <div class="d-flex justify-content-center mb-2">
                    <% if (profile.status === 'Idle') { %>
                        <button type="button" class="btn btn-danger-custom col-10"><b>Request Blood</b></button>
                        <!-- <button type="button" class="btn btn-danger-custom">Donate</button>
                        <button type="button" class="btn btn-outline-primary ms-1">Request Blood</button> -->
                    <% } else if (profile.status === 'Doner') { %>
                        <button type="button" class="btn btn-danger-custom col-10"><b>Request Blood</b></button>
                      <% } else { %>
                        <button type="button" class="btn btn-warning col-10">Donate</button>
                      <% } %>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-8">
              <div class="card mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Id</p>
                      </div>
                      <div class="col-sm-9">
                        <p class="text-muted mb-0"><%=profile._id%></p>
                      </div>
                      </div>
                      <hr>
                      <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Age</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=moment().diff(profile.dob, 'years')+" years "%></p>

                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Gender</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=profile.gender%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3 mt-2">
                      <p class="mb-0">Blood Group</p>
                    </div>
                    <div class="col-sm-9">
                     <span class="btn btn-danger-custom"><b><%=profile.bloodgroup%></b></span>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Phonenumber</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=profile.phonenumber%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Date Joined</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=profile.date%></p>
                    </div>
                  </div>
                </div>
              </div>
              </div>
            </div>
          </div>
        </div>
      </section>
  </main>
  <!--Main layout-->